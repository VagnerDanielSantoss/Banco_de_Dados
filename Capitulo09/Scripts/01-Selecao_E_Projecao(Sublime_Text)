 SELECT NOME, SEXO, BAIRRO, CIDADE  -- /*PROJEÇÃO*/
 FROM CLIENTE  -- /*ORIGEM*/
	 INNER JOIN ENDERECO  -- /*JUNÇÃO*/
	 ON IDCLIENTE = ID_CLIENTE 
 WHERE SEXO = "F";  -- /*SELEÇÃO*/
