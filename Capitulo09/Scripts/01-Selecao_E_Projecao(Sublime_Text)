          /* NOME, SEXO, BAIRRO, CIDADE, TIPO, NÚMERO */

 SELECT CLIENTE.NOME, CLIENTE.SEXO, ENDERECO.BAIRRO, ENDERECO.CIDADE, TELEFONE.TIPO, TELEFONE.DDD, TELEFONE.NUMERO
 FROM CLIENTE
 	INNER JOIN ENDERECO 	
 	ON CLIENTE.IDCLIENTE = ENDERECO.ID_CLIENTE
 	INNER JOIN TELEFONE
 	ON CLIENTE.IDCLIENTE = TELEFONE.ID_CLIENTE;

