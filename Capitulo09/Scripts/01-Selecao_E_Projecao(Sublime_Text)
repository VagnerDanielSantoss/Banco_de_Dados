      /* NÃO UTILIZAR ESTA INSTRUÇÃO ABAIXO, FUNCIONA, MAS NÃO É VIÁVEL */

 SELECT NOME, SEXO, BAIRRO, CIDADE
 FROM CLIENTE, ENDERECO
 WHERE IDCLIENTE = ID_CLIENTE;
