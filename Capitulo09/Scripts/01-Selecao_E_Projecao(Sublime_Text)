          /* COMANDOS DDL - DATA DEFINITION LANGUAGE (LINGUAGEM DE DEFINIÇÃO DE DADOS) */


          /* 
				CREATE
				ALTER
                ADD
                AFTER
                FIRST
          */

CREATE TABLE PRODUTO
(
	IDPRODUTO INT PRIMARY KEY AUTO_INCREMENT,
	NOME_PRODUTO VARCHAR(100),
	PRECO INT,
	FRETE DECIMAL(18,2)
);

SHOW TABLES;
+--------------------+
| Tables_in_comercio |
+--------------------+
| cliente            |
| endereco           |
| produto            |
| telefone           |
+--------------------+

     /* ALTERA O NOME DE UMA COLUNA */

 DESC PRODUTO;
 +--------------+---------------+------+-----+---------+----------------+
| Field        | Type          | Null | Key | Default | Extra          |
+--------------+---------------+------+-----+---------+----------------+
| IDPRODUTO    | int           | NO   | PRI | NULL    | auto_increment |
| NOME_PRODUTO | varchar(100)  | YES  |     | NULL    |                |
| PRECO        | int           | YES  |     | NULL    |                |
| FRETE        | decimal(18,2) | YES  |     | NULL    |                |
+--------------+---------------+------+-----+---------+----------------+

 ALTER TABLE PRODUTO 
 CHANGE PRECO VALOR_UNITARIO INT NOT NULL;
+----------------+---------------+------+-----+---------+----------------+
| Field          | Type          | Null | Key | Default | Extra          |
+----------------+---------------+------+-----+---------+----------------+
| IDPRODUTO      | int           | NO   | PRI | NULL    | auto_increment |
| NOME_PRODUTO   | varchar(100)  | YES  |     | NULL    |                |
| VALOR_UNITARIO | int           | NO   |     | NULL    |                |
| FRETE          | decimal(18,2) | YES  |     | NULL    |                |
+----------------+---------------+------+-----+---------+----------------+

ALTER TABLE PRODUTO 
MODIFY NOME_PRODUTO VARCHAR(100) NOT NULL;
+----------------+---------------+------+-----+---------+----------------+
| Field          | Type          | Null | Key | Default | Extra          |
+----------------+---------------+------+-----+---------+----------------+
| IDPRODUTO      | int           | NO   | PRI | NULL    | auto_increment |
| NOME_PRODUTO   | varchar(100)  | NO   |     | NULL    |                |
| VALOR_UNITARIO | int           | NO   |     | NULL    |                |
| FRETE          | decimal(18,2) | YES  |     | NULL    |                |
+----------------+---------------+------+-----+---------+----------------+

ALTER TABLE PRODUTO 
ADD PESO FLOAT(10,2) NOT NULL;

DESC PRODUTO;
+----------------+---------------+------+-----+---------+----------------+
| Field          | Type          | Null | Key | Default | Extra          |
+----------------+---------------+------+-----+---------+----------------+
| IDPRODUTO      | int           | NO   | PRI | NULL    | auto_increment |
| NOME_PRODUTO   | varchar(100)  | NO   |     | NULL    |                |
| VALOR_UNITARIO | int           | NO   |     | NULL    |                |
| FRETE          | decimal(18,2) | YES  |     | NULL    |                |
| PESO           | float(10,2)   | NO   |     | NULL    |                |
+----------------+---------------+------+-----+---------+----------------+


         /* APAGA UMA COLUNA */

ALTER TABLE PRODUTO 
DROP COLUMN PESO;


DESC PRODUTO;
+----------------+---------------+------+-----+---------+----------------+
| Field          | Type          | Null | Key | Default | Extra          |
+----------------+---------------+------+-----+---------+----------------+
| IDPRODUTO      | int           | NO   | PRI | NULL    | auto_increment |
| NOME_PRODUTO   | varchar(100)  | NO   |     | NULL    |                |
| VALOR_UNITARIO | int           | NO   |     | NULL    |                |
| FRETE          | decimal(18,2) | YES  |     | NULL    |                |
+----------------+---------------+------+-----+---------+----------------+


         /* ADICIONA UMA COLUNA EM UMA ORDEM ESPECÍFICA */

ALTER TABLE PRODUTO 
ADD COLUMN PESO FLOAT(10,2) NOT NULL 
AFTER NOME_PRODUTO;


DESC PRODUTO;
+----------------+---------------+------+-----+---------+----------------+
| Field          | Type          | Null | Key | Default | Extra          |
+----------------+---------------+------+-----+---------+----------------+
| IDPRODUTO      | int           | NO   | PRI | NULL    | auto_increment |
| NOME_PRODUTO   | varchar(100)  | NO   |     | NULL    |                |
| PESO           | float(10,2)   | NO   |     | NULL    |                |
| VALOR_UNITARIO | int           | NO   |     | NULL    |                |
| FRETE          | decimal(18,2) | YES  |     | NULL    |                |
+----------------+---------------+------+-----+---------+----------------+


         /* ADICIONA UMA COLUNA EM UMA ORDEM ESPECÍFICA (PRIMEIRA)*/

ALTER TABLE PRODUTO 
ADD COLUMN QUANTIDADE_ESTOQUE INT NOT NULL 
FIRST ;


DESC PRODUTO;
+--------------------+---------------+------+-----+---------+----------------+
| Field              | Type          | Null | Key | Default | Extra          |
+--------------------+---------------+------+-----+---------+----------------+
| QUANTIDADE_ESTOQUE | int           | NO   |     | NULL    |                |
| IDPRODUTO          | int           | NO   | PRI | NULL    | auto_increment |
| NOME_PRODUTO       | varchar(100)  | NO   |     | NULL    |                |
| PESO               | float(10,2)   | NO   |     | NULL    |                |
| VALOR_UNITARIO     | int           | NO   |     | NULL    |                |
| FRETE              | decimal(18,2) | YES  |     | NULL    |                |
+--------------------+---------------+------+-----+---------+----------------+
